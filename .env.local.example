# ============================================
# MENTHA FRONTEND - Environment Configuration
# ============================================
# Copy this file to frontend/.env.local

# ===================
# Application URLs
# ===================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===================
# Supabase (Required)
# ===================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===================
# AI Providers (for client-side features)
# ===================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# ===================
# Stripe (Optional - for payments)
# ===================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Stripe Price IDs
STRIPE_PRICE_ID_STARTER_MONTHLY=price_starter_monthly
STRIPE_PRICE_ID_STARTER_YEARLY=price_starter_yearly
STRIPE_PRICE_ID_PRO_MONTHLY=price_pro_monthly
STRIPE_PRICE_ID_PRO_YEARLY=price_pro_yearly
STRIPE_PRICE_ID_ENTERPRISE_MONTHLY=price_enterprise_monthly
STRIPE_PRICE_ID_ENTERPRISE_YEARLY=price_enterprise_yearly

# ===================
# Feature Flags
# ===================
NEXT_PUBLIC_DEMO_MODE_ENABLED=true
