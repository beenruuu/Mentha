{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "root": false,
  "extends": ["../../biome.json"],
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "!**/.next",
      "!**/next-env.d.ts",
      "!**/public"
    ]
  },
  "javascript": {
    "globals": ["React", "JSX"]
  },
  "linter": {
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "warn"
      },
      "a11y": {
        "noSvgWithoutTitle": "warn"
      }
    }
  }
}
