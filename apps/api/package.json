{
  "name": "mentha-backend",
  "version": "1.0.0",
  "description": "AEO/GEO Intelligence Platform Backend",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "cli": "tsx src/cli.ts",
    "setup": "tsx src/setup.ts",
    "mcp": "tsx src/mcp-server.ts",
    "start:api": "node dist/app.js",
    "start:worker": "node dist/workers/index.js",
    "build": "tsc",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=unit --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --passWithNoTests",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx src/infrastructure/database/migrate.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@supabase/supabase-js": "^2.45.0",
    "bullmq": "^5.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.56.0",
    "tiktoken": "^1.0.15",
    "winston": "^3.14.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.0",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}