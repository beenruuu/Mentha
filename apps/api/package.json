{
  "name": "mentha-api",
  "version": "1.0.0",
  "description": "AEO/GEO Intelligence Platform Backend",
  "type": "module",
  "main": "src/app.ts",
  "exports": {
    ".": {
      "types": "./src/app.ts",
      "default": "./src/app.ts"
    },
    "./types": {
      "types": "./src/app.ts",
      "default": "./src/app.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "start:api": "tsx src/app.ts",
    "start:worker": "tsx src/workers/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.1",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.12.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.6.14",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.56.0",
    "postgres": "^3.4.8",
    "tiktoken": "^1.0.15",
    "winston": "^3.14.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.0",
    "drizzle-kit": "^0.31.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
