{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "root": false,
  "extends": ["../../biome.json"],
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "!**/dist",
      "!**/drizzle"
    ]
  },
  "javascript": {
    "globals": ["console", "process"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": {
          "level": "off"
        }
      },
      "style": {
        "useNodejsImportProtocol": "error"
      }
    }
  }
}
